# Production Environment Configuration
ENVIRONMENT=production
AWS_REGION=us-east-1

# DynamoDB Tables for Production
DYNAMODB_USERS_TABLE=users-production
DYNAMODB_ACTIVITY_TABLE=user_activity-production

# Cognito Configuration (set via GitHub secrets)
COGNITO_USER_POOL_ID=${PROD_COGNITO_USER_POOL_ID}
COGNITO_CLIENT_ID=${PROD_COGNITO_CLIENT_ID}
COGNITO_CLIENT_SECRET=${PROD_COGNITO_CLIENT_SECRET}

# OpenAI Configuration (set via GitHub secrets)
OPENAI_API_KEY=${PROD_OPENAI_API_KEY}

# Rate limiting for production
RATE_LIMIT_WINDOW_SECONDS=900
RATE_LIMIT_MAX_REQUESTS=100

# CORS (production frontend URLs only)
ALLOWED_ORIGINS=https://your-production-frontend.com