# Staging Environment Configuration
ENVIRONMENT=staging
AWS_REGION=us-east-1

# DynamoDB Tables for Staging
DYNAMODB_USERS_TABLE=users-staging
DYNAMODB_ACTIVITY_TABLE=user_activity-staging

# Cognito Configuration (set via GitHub secrets)
COGNITO_USER_POOL_ID=${STAGING_COGNITO_USER_POOL_ID}
COGNITO_CLIENT_ID=${STAGING_COGNITO_CLIENT_ID}
COGNITO_CLIENT_SECRET=${STAGING_COGNITO_CLIENT_SECRET}

# OpenAI Configuration (set via GitHub secrets)
OPENAI_API_KEY=${STAGING_OPENAI_API_KEY}

# Rate limiting for staging (more permissive)
RATE_LIMIT_WINDOW_SECONDS=300
RATE_LIMIT_MAX_REQUESTS=200

# CORS (add staging frontend URL if needed)
ALLOWED_ORIGINS=http://localhost:3000,https://your-staging-frontend.com